<!DOCTYPE html>
<html>
<%- include('header')%>
<body>
    <%- include('menu-nav')%>
    </br></br></br>
    <h1>CEU QUEJAS</h1>
    </br>
    <form method="post" class="contact-form" id="contactForm">
        <input type="text" name="title" id="title" placeholder="Título Queja" required>
        <input type="text" name="nombre" id="name" placeholder="Nombre" required>
        <input type="email" name="email" id="email" placeholder="E-mail" required>
        <textarea name="mensaje" id="mensaje" cols="30" rows="10" placeholder="Mensaje" required></textarea>
        <button type="submit">Enviar</button>
        </br>
        </br>
        <p>Para acceder al chat porfavor haz click <a href="#" onClick="window.open('chat','Chat','resizable,height=750,width=400'); return false;">aquí</a></p>
    </form>
    <br>
    <% queja.forEach(function (data){ %>
    <div class="verquejas">
        <h3><%= data.title %></h3>
        <p class="description"> <b>Nombre: </b> <%= data.firstName %> </p>
        <p class="description"> <b>Correo: </b> <%= data.email %> </p>
        <p class="description"> <b>Mensaje: </b> <%= data.mensaje %> </p>
    </div>
    <% }) %>
</body>
</html>

